{
    "name": "cwp/cwp-installer",
    "type": "silverstripe-recipe",
    "description": "CWP Project Template",
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=7.1.0",
        "silverstripe/recipe-plugin": "^1",
        "cwp/cwp-recipe-core": "2.4.0@stable",
        "cwp/cwp-recipe-cms": "2.4.0@stable",
        "dnadesign/silverstripe-elemental": "^4.2",
        "sunnysideup/webpack_requirements_backend": "^4.0"
    },
    "suggest": {
        "silverstripe/recipe-content-blocks": "Supplement the CMS with a 'content block' approach to editing"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3",
        "sunnysideup/typography": "^7.0",
        "sunnysideup/templateoverview": "^6.1",
        "sunnysideup/sswebpack_engine_only": "dev-master",
        "sunnysideup/dataobject-generator": "dev-master"
    },
    "extra": {
        "resources-dir": "_resources",
        "expose": [
            "app/client",
            "themes/base_dist"
        ],
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/blog.yml",
            "app/_config/environmentcheck.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "install-frameworkmissing.html",
            "install.php",
            "web.config"
        ]
    },
    "config": {
        "process-timeout": 600
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
